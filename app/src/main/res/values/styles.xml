<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BottomNavHeight" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_height">63dp</item> <!-- Change the height as needed -->
    </style>

    <style name="profileLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightProfileLabel</item>
    </style>

    <style name="profileValue">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/lightProfileValue</item>
    </style>

    <style name="bottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="cornerRadius">13dp</item>
    </style>

    <!--    <style name="MyButton" parent="Widget.AppCompat.Button">-->
    <!--        <item name="android:textAllCaps">false</item>-->
    <!--    </style>-->
    <style name="disableButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">150dp</item>
        <item name="backgroundTint">@color/lightBodyColor</item>
        <item name="android:textColor">@color/lightSidebarColor</item>
        <item name="strokeColor">@color/lightBodyColor</item>
        <item name="strokeWidth">10dp</item>
    </style>

    <style name="selectedButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">150dp</item>

    </style>

    <style name="pageTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:textColor">@color/lightInputBorderFocus</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">13dp</item>
    </style>

    <style name="supplyInput">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="supplyInputIcon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginStart">20dp</item>

    </style>

    <style name="editProfileInput">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="profileCard">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="profileCardIcon">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="buttonSimple" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- Customize attributes as needed -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <!-- Add more customizations here -->
    </style>

    <style name="DialogAnimation">
        <!-- Define dialog animation styles if needed -->
    </style>

</resources>